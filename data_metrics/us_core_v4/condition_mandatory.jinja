-- http://hl7.org/fhir/us/core/STU4/StructureDefinition-us-core-condition.html

WITH

tmp_verification AS {{
    utils.extract_codes_flat(
        src,
        'verificationstatus',
        system='http://terminology.hl7.org/CodeSystem/condition-ver-status',
    )
}},

tmp_grouped AS (
    SELECT
        src.id,
        ARBITRARY(src.category) AS category,
        ARBITRARY(src.code) AS code,
        ARBITRARY(src.subject) AS subject,

        BOOL_AND(
            {{ utils.is_concept_valid('src.clinicalstatus') }}
            AND (
                tmp_verification.code IS NULL
                OR tmp_verification.code != 'entered-in-error'
            )
        ) OR
        BOOL_OR (
            (NOT {{ utils.is_concept_valid('src.clinicalstatus') }})
            AND tmp_verification.code IS NOT NULL
            AND tmp_verification.code = 'entered-in-error'
        ) AS valid_status

    FROM {{ src }} AS src
    LEFT JOIN tmp_verification
    ON tmp_verification.id = src.id
    GROUP BY src.id
),

tmp_simplified AS (
    SELECT
        id,
        valid_status,
        category IS NOT NULL AS valid_category,
        {{ utils.is_concept_valid('code') }} AS valid_code,
        {{ utils.is_reference_of_type('subject', 'Patient') }} AS valid_subject
    FROM tmp_grouped
)

{%
set fields = [
    'valid_status',
    'valid_category',
    'valid_code',
    'valid_subject',
]
%}

SELECT
    id,
    {{ fields|join(", ") }},
    {{ fields|join(" AND ") }} AS valid
FROM tmp_simplified
