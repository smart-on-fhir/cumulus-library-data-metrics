    id,
    (
        status IS NOT NULL
        AND {{ utils.is_coding_valid('class') }}
        AND type IS NOT NULL
        AND {{ utils.is_reference_of_type('subject', 'Patient') }}
    ) AS valid
FROM {{ src }}
